    <link href = "https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css" rel = "stylesheet">
    <style>
        .blog-post {
            display: flex;
            align-items: flex-start;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            padding: 15px;
            border-radius: 5px;
        }

        .blog-post img {
            width: 200px;
            height: 200px;
            object-fit: cover; /* Ensures image fits the square dimension */
            border-radius: 5px;
            margin-right: 20px;
        }

        .blog-details {
            flex: 1;
        }

        .blog-details h2 {
            margin-top: 0;
        }

        .blog-details .blog-content {
            margin-bottom: 10px;
        }

        .blog-details .blog-time {
            font-size: 0.9em;
            color: #777;
        }
    </style>
</head>
<body>
    <header class="text-gray-600 body-font">
        <div class="container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center">
            <a class="flex title-font font-medium items-center text-gray-900 mb-4 md:mb-0" href="/auth/homepage">
                <img src="/images/favicon.ico" alt="logo" class="w-10 h-10 p-2 bg-yellow-500 rounded-full" />
                <span class="ml-3 text-xl">student playroom</span>
              </a>
              
          <nav class="md:ml-auto md:mr-auto flex flex-wrap items-center text-base justify-center">
            <a class="mr-5 hover:text-gray-900" href="/auth/general">General</a>
            <a class="mr-5 hover:text-gray-900" href="/auth/studies">Studies</a>
            <a class="mr-5 hover:text-gray-900" href="/auth/sports">Sports</a>
            <a class="mr-5 hover:text-gray-900" href="/auth/mementos">Mementos</a>
            <a class="mr-5 hover:text-gray-900" href="/auth/profile">Profile</a>
          </nav>
          <a href="/auth/writeblog" class="inline-flex items-center bg-yellow-400 text-gray-900 border-0 py-1 px-3 focus:outline-none hover:bg-yellow-500 rounded text-base mt-4 md:mt-0">Write Blog
            <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 ml-1" viewBox="0 0 24 24">
              <path d="M5 12h14M12 5l7 7-7 7"></path>
            </svg>
          </a>
          
          
        </div>
      </header>

    <div class="container mt-4">
        <h1>Welcome to the Student Blog Homepage!</h1>

        <div id="blogs-container">
            <% if (blogs.length > 0) { %>
                <% blogs.forEach(blog => { %>
                    <div class="blog-post">
                        <img src="<%= blog.image || '/images/favicon.ico' %>" alt="Blog Image">
                        <div class="blog-details">
                            <h2><%= blog.title %></h2>
                            <p><strong>By: <%= blog.writer.username %></strong></p>
                            <p class="blog-content"><%= blog.content.substring(0, 100) + '...' %></p>
                            <p class="blog-time">Posted on: <%= new Date(blog.createdAt).toLocaleString() %></p>
                            <a href="/auth/blog/<%= blog._id %>" class="btn btn-primary">Read more</a>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No blogs available at the moment.</p>
            <% } %>
        </div>
    </div>









